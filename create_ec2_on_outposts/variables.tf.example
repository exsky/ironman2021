variable "instance_name" {
  description = "Value of the Name tag for the EC2 instance"
  type        = string
  default     = "My app server on outposts"
}

variable "ami_id" {
  description = "Ubuntu Server 20.04 LTS (HVM),EBS General Purpose (SSD) Volume Type. Support available from Canonical (http://www.ubuntu.com/cloud/services)."
  default     = "ami-0df99b3a8349462c6"
}

variable "subnet_outposts_1" {
  description = "Outposts Subnet 1"
  default     = "subnet-xxxx" # 只要是 Outposts 上的網段即可
}

variable "subnet_outposts_2" {
  description = "Outposts Subnet 2"
  default     = "subnet-xxxx" # 只要是 Outposts 上的網段即可
}

variable "outpost_arn" {
  description = "The outpost arn"
  default     = "arn:aws:outposts:ap-northeast-1:999999999999:outpost/op-xxx" # 將這個 arn 改成 aws cli 可以有權限操作的 Outposts
}
